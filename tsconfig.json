{
    "extends": "tsconfig-leonardjouve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "references": [{"path": "./tsconfig.node.json"}],
    "noEmit": true,
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": ["node"],
        "verbatimModuleSyntax": false,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@store/*": ["./src/store/*"],
            "@intl/*": ["./src/intl/*"],
            "@api/*": ["./src/api/*"],
            "@typing/*": ["./src/types/*"],
            "@utils/*": ["./src/utils/*"],
        },
    },
}
